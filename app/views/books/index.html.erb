<h1>indexページ</h1>

<% @books.each do |book| %>
  <p>タイトル</p>
  <span>
    <%= book.title %>
    <%= link_to "show", book_path(book.id) %>
  </span>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
